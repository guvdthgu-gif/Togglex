{
  "name": "@guvdthgu-gif/togglex",
  "version": "0.0.1",
  "description": "Accessible, themeable toggle switch React component",
  "license": "MIT",
  "author": "Your Name",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "**/styles/*.css"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.build.json && vite build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --write .",
    "prepublishOnly": "npm run build && npm run lint && npm run typecheck"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.4.21"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,css,md,json}": [
      "prettier --write",
      "eslint --cache --fix"
    ]
  },
  "keywords": [
    "toggle",
    "switch",
    "react",
    "accessible",
    "ui",
    "component",
    "typescript",
    "theme"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/guvdthgu-gif/Togglex"
  },
  "bugs": {
    "url": "https://github.com/guvdthgu-gif/Togglex/issues"
  },
  "homepage": "https://github.com/guvdthgu-gif/Togglex#readme",
  "publishConfig": {
    "access": "public"
  }
}