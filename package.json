{
  "name": "@your-scope/togglex",
  "version": "0.0.1",
  "description": "Accessible, themeable toggle switch React components",
  "license": "MIT",
  "author": "Your Name",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "**/styles/*.css"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --write .",
    "prepublishOnly": "npm run build && npm run lint && npm run typecheck"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,css,md,json}": [
      "prettier --write",
      "eslint --cache --fix"
    ]
  },
  "keywords": [
    "toggle",
    "switch",
    "react",
    "accessible",
    "ui",
    "component"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-login/togglex"
  }
}
